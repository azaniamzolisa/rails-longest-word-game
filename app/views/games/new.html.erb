<h1>This is the view</h1>

<h1>Longest Word Game</h1>
<p>Here is your grid:</p>
<ul>
  <% @letters.each do |letter| %>
    <li class="letter-box"><%= letter %></li>
  <% end %>
</ul>

<%= form_tag(score_path, method: :post, data: { turbo: false }) do %>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters.join(" ") %>
  <div class="form-group">
    <label for="word">Your word:</label>
    <input type="text" name="word" id="word" class="form-control">
  </div>
  <%= submit_tag "Submit", class: "btn btn-primary" %>
<% end %>
